@model MailApp.Models.Groups.AddMemberViewModel

<form asp-action="AddMember">
    <input asp-for="GroupId" type="hidden" />
    <label asp-for="AccountNick"> Account to add: </label>
    <div class="input-group mb-3">
        <input asp-for="AccountNick" class="form-control @(ViewContext.ModelState.ContainsKey(nameof(Model.AccountNick)) ? "is-invalid": "")" placeholder="Nick">
        <br />
        <div class="text-danger invalid-feedback">
            @Html.ValidationMessageFor(x => x.AccountNick)
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>